{
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "strict": false,
    "lib": ["es6", "dom"],
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"]
}
